<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BancoDaFrHe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:backgroundTint">@color/Negrete1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Estilo.grisito2" parent="Base.Theme.BancoDaFrHe">
        <item name="android:backgroundTint">@color/grisito2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Estilo.grisitoOscuro" parent="Base.Theme.BancoDaFrHe">
        <item name="android:backgroundTint">@color/grisitoOscuro</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Estilo.Button.main" parent="Base.Theme.BancoDaFrHe">
        <item name="android:backgroundTint">@color/grisito2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Estilo.fab" parent="Base.Theme.BancoDaFrHe">
        <item name="android:backgroundTint">@color/grisito</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="Estilo.Appbar" parent="Base.Theme.BancoDaFrHe">
        <item name="android:backgroundTint">@color/grisito2</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="Estilo.TextInputLayout" parent="Base.Theme.BancoDaFrHe">
        <item name="android:backgroundTint">@color/grisito</item>
        <item name="android:textColor">@color/white</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Estilo.Spinner" parent="Base.Theme.BancoDaFrHe">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

     <style name="Estilo.textoBlanco" parent="Base.Theme.BancoDaFrHe">
         <item name="android:textColor">@color/white</item>
     </style>

    <style name="Estilo.backgroundGris" parent="Base.Theme.BancoDaFrHe">
        <item name="android:background">@color/grisito2</item>
        <item name="android:backgroundTint">@color/grisito2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.BancoDaFrHe" parent="Base.Theme.BancoDaFrHe" />

</resources>